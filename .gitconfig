[diff]
	color = auto
[status]
	color = auto
[pager]
	color = true
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	pullall = "!f(){ git pull \"$@\" && git submodule update --init --recursive; }; f"
[diff "odf"]
    textconv=odt2txt

